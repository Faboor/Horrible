<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:padding="4dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/external_links"
        android:textSize="12sp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:shapeAppearanceOverlay="@style/Shape.Rounded8.Diagonal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAlignment="textStart"
            android:layout_marginEnd="6.5dp"
            android:text="@string/view_in_browser"
            android:paddingBottom="12dp"
            app:icon="@drawable/ic_open"
            android:textAllCaps="false"
            android:paddingTop="12dp"
            android:id="@+id/button1"
            android:textSize="11.5sp"
            tools:ignore="SmallSp"
            app:iconPadding="7dp"
            app:iconSize="16dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:shapeAppearanceOverlay="@style/Shape.Rounded8.Diagonal"
            android:layout_height="wrap_content"
            android:text="@string/view_in_mal"
            android:layout_marginStart="6.5dp"
            android:textAlignment="textStart"
            android:paddingBottom="12dp"
            app:icon="@drawable/ic_open"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:id="@+id/button2"
            android:textSize="11.5sp"
            tools:ignore="SmallSp"
            app:iconPadding="7dp"
            app:iconSize="16dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:shapeAppearanceOverlay="@style/Shape.Rounded8.Diagonal"
            android:text="@string/search_in_animekaizoku"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6.5dp"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_search"
            android:paddingBottom="12dp"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:id="@+id/button4"
            android:textSize="11.5sp"
            tools:ignore="SmallSp"
            app:iconPadding="7dp"
            app:iconSize="16dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:shapeAppearanceOverlay="@style/Shape.Rounded8.Diagonal"
            android:text="@string/search_in_nyaa"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginStart="6.5dp"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_search"
            android:paddingBottom="12dp"
            android:textAllCaps="false"
            android:paddingTop="12dp"
            android:id="@+id/button3"
            android:textSize="11.5sp"
            tools:ignore="SmallSp"
            app:iconPadding="7dp"
            app:iconSize="16dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
