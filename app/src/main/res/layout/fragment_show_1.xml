<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.card.MaterialCardView
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:transitionName="Horrible Subz"
            app:cardCornerRadius="8dp"
            tools:targetApi="lollipop">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="135dp"
                    android:layout_height="200dp"
                    android:layout_margin="4dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="6dp"
                        android:text="@string/new_releases"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="9"
                        android:padding="6dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textSize="13.5sp" />

                    <android.support.design.button.MaterialButton
                        android:id="@+id/button1"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/view_more"
                        android:textSize="12sp"
                        app:textAllCaps="false" />

                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:transitionName="Horrible Subz"
            app:cardCornerRadius="8dp"
            tools:targetApi="lollipop">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="18dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="8dp"
                        android:text="@string/batches"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textSize="14.5sp" />

                    <android.support.design.button.MaterialButton
                        android:id="@+id/button2"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/view_more"
                        android:textSize="12sp"
                        app:textAllCaps="false" />

                </android.support.v7.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/no_batches_available"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView1"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    tools:listitem="@layout/recycler_release_item" />

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:transitionName="Horrible Subz"
            app:cardCornerRadius="8dp"
            tools:targetApi="lollipop">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="18dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="8dp"
                        android:text="@string/latest_releases"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textSize="14.5sp" />

                    <android.support.design.button.MaterialButton
                        android:id="@+id/button3"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/view_more"
                        android:textSize="12sp"
                        app:textAllCaps="false" />

                </android.support.v7.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/no_episodes_available"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView2"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    tools:listitem="@layout/recycler_release_item" />

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.design.card.MaterialCardView>

    </android.support.v7.widget.LinearLayoutCompat>

</ScrollView>