<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginStart="4dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginEnd="4dp"
    app:cardBackgroundColor="#dcdcdc"
    app:cardCornerRadius="4.4dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a0ffffff"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingEnd="10dp"
        android:paddingBottom="8dp">

        <TextView
            android:gravity="center_vertical"
            android:lines="2"
            android:paddingStart="4dp"
            android:paddingTop="5dp"
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:paddingEnd="4dp"
            android:paddingBottom="3dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="12.5sp"
            android:textColor="@color/colorText"
            tools:text="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/textView2"
                android:padding="4dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="2"
                android:textColor="@color/colorText"
                android:textSize="11.4sp"
                tools:ignore="SmallSp"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/textView3"
                style="@style/TextView.Label"
                android:textColor="@color/colorSD"
                android:text="@string/_480p" />

            <TextView
                android:id="@+id/textView4"
                style="@style/TextView.Label"
                android:textColor="@color/colorHD"
                android:text="@string/_720p" />

            <TextView
                android:id="@+id/textView5"
                style="@style/TextView.Label"
                android:layout_marginEnd="0dp"
                android:layout_weight="0"
                android:textColor="@color/colorFHD"
                android:text="@string/_1080p"
                android:layout_marginRight="0dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>