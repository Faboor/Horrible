<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_marginStart="4dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="#55000000"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="#afffffff"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:maxLines="3"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textColor="@color/colorText"
            android:lines="2"
            android:textSize="12.5sp"
            tools:text="@string/app_name"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/textView2"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_gravity="start|center_vertical"
                android:layout_weight="1"
                android:maxLines="2"
                android:textColor="@color/colorText"
                android:textSize="11sp"
                tools:ignore="SmallSp"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/textView3"
                style="@style/TextView.Label"
                android:layout_weight="0"
                android:textColor="#003e8b"
                android:text="@string/_480p" />

            <TextView
                android:id="@+id/textView4"
                style="@style/TextView.Label"
                android:layout_weight="0"
                android:textColor="#4a008b"
                android:text="@string/_720p" />

            <TextView
                android:id="@+id/textView5"
                style="@style/TextView.Label"
                android:layout_marginEnd="0dp"
                android:layout_weight="0"
                android:textColor="#8b003c"
                android:text="@string/_1080p"
                android:layout_marginRight="0dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.design.card.MaterialCardView>