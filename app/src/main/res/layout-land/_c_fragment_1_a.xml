<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        app:layout_constraintBottom_toTopOf="@id/textView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="20dp"
        tools:src="@tools:sample/avatars"
        android:layout_marginTop="10dp"
        android:layout_height="0dp"
        tools:scaleType="fitCenter"
        android:id="@+id/imageView"
        android:layout_width="0dp" />

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintBottom_toTopOf="@id/layout1"
        android:textAppearance="?textAppearanceHeadline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@tools:sample/full_names"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="20dp"
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:gravity="center"
        android:textSize="16sp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintBottom_toTopOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="20dp"
        android:layout_width="0dp"
        android:id="@+id/layout1"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="Saturday's at 6:00 PM"
            android:id="@+id/textView2"
            android:textSize="11.25sp"
            tools:ignore="SmallSp"
            android:gravity="end" />

        <androidx.appcompat.widget.AppCompatImageView
            android:alpha="?android:disabledAlpha"
            android:src="@drawable/bg_marker_3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:tint="?colorOnSurface"
            android:layout_height="4dp"
            android:layout_width="4dp"
            android:id="@+id/divider" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="Currently Airing"
            android:id="@+id/textView3"
            android:textSize="11.25sp"
            tools:ignore="SmallSp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="?textAppearanceSubtitle2"
        app:layout_constraintBottom_toTopOf="@id/layout2"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_marker_4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="?colorSurface"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="20dp"
        android:id="@+id/textView4"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:textSize="10.5sp"
        tools:text="2 days ago"
        tools:ignore="SmallSp"
        android:padding="3.5dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/layout2"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_playlist"
            android:layout_width="0dp"
            android:id="@+id/button1b"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:theme="@style/Theme.Divider"
            android:layout_height="match_parent"
            android:layout_marginBottom="4.5dp"
            android:layout_marginEnd="3.75dp"
            android:layout_marginTop="4.5dp"
            android:layout_width="0.5dp" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:id="@+id/button1a"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:id="@+id/button2a"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:id="@+id/button3a"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:src="@drawable/ic_bookmarked"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/button2b"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:theme="@style/Theme.Divider"
            android:layout_height="match_parent"
            android:layout_marginBottom="4.5dp"
            android:layout_marginEnd="3.75dp"
            android:layout_marginTop="4.5dp"
            android:layout_width="0.5dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:src="@drawable/ic_menu_horiz"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/button3b"
            android:layout_weight="1" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>