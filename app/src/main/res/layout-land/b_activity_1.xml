<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <fragment
        android:name="info.horriblesubs.sher.ui.b.favourite.Favourite"
        app:layout_constraintEnd_toStartOf="@id/fragment2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="0.410"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:layout="@layout/b_x_fragment_2"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:id="@+id/fragment1"
        android:layout_width="0dp" />

    <View
        app:layout_constraintStart_toEndOf="@id/fragment1"
        app:layout_constraintEnd_toStartOf="@id/fragment2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?colorOnSurface"
        android:layout_width="0.36dp"
        android:layout_height="0dp"
        android:alpha="0.35" />

    <fragment
        android:name="info.horriblesubs.sher.ui.b.random.HomeTab"
        app:layout_constraintStart_toEndOf="@id/fragment1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/b_x_fragment_1"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:id="@+id/fragment2"
        android:layout_width="0dp" />

    <View
        app:layout_constraintStart_toStartOf="@id/fragment2"
        app:layout_constraintBottom_toTopOf="@id/fragment3"
        app:layout_constraintTop_toBottomOf="@id/fragment2"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?colorOnSurface"
        android:layout_height="0.36dp"
        android:layout_width="0dp"
        android:alpha="0.35" />

    <fragment
        android:name="info.horriblesubs.sher.ui.b.latest.Latest"
        app:layout_constraintStart_toStartOf="@id/fragment2"
        app:layout_constraintTop_toBottomOf="@id/fragment2"
        app:layout_constraintEnd_toEndOf="@id/fragment2"
        tools:layout="@layout/b_x_fragment_3"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:id="@+id/fragment3"
        android:layout_width="0dp" />

    <View
        app:layout_constraintStart_toStartOf="@id/fragment2"
        app:layout_constraintBottom_toTopOf="@id/fragment4"
        app:layout_constraintTop_toBottomOf="@id/fragment3"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?colorOnSurface"
        android:layout_height="0.36dp"
        android:layout_width="0dp"
        android:alpha="0.35" />

    <fragment
        android:name="info.horriblesubs.sher.ui.b.today.Today"
        app:layout_constraintStart_toStartOf="@id/fragment2"
        app:layout_constraintTop_toBottomOf="@id/fragment3"
        app:layout_constraintEnd_toEndOf="@id/fragment2"
        tools:layout="@layout/b_x_fragment_4"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/fragment4"
        android:layout_width="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
