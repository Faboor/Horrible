<resources>
    <!--Theme2.0-->

    <!--Common Styles-->
    <style name="Theme.Parent" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.Parent.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--Different Styles-->
    <style name="Theme" parent="Theme.Parent">
        <item name="colorPrimaryDark">@color/primaryDarkForLight</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <item name="colorPrimary">@color/primaryForLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fabStyle">@style/Theme.Fab</item>
        <item name="tabTextColor">#85000000</item>
        <item name="colorItem">#25000000</item>
    </style>

    <style name="Theme.Fab">
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">#fcfcfc</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="Theme.Button.Error">
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="Theme.Button" parent="Theme">
        <item name="colorPrimary">?colorAccent</item>
    </style>

    <style name="Theme.Dialog" parent="Theme.Parent.Dialog">
        <item name="android:colorBackground">@color/colorOnSurfaceDark</item>
        <item name="colorAccent">@color/textHeadingLight</item>
    </style>
















    <!--Parent Theme-->

    <style name="Parent" />

    <style name="Parent.Light" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimaryDark">@color/colorSurfaceDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Parent.Dark" parent="Theme.MaterialComponents">
<!--        <item name="colorPrimaryDark">@color/colorSurfaceDark</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Parent.Dialog.Light" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Parent.Dialog.Dark" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <attr name="tabTextColor" format="color" />
    <attr name="fabStyle" format="reference" />
    <attr name="colorItem" format="color" />

</resources>