<resources>

    <!--Parent Theme-->

    <style name="AniDex" />

    <style name="Parent.Light" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimaryDark">@color/colorSurfaceDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Parent.Dark" parent="Theme.MaterialComponents">
        <item name="colorPrimaryDark">@color/colorSurfaceDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Parent.Dialog.Light" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Parent.Dialog.Dark" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--Application Theme-->

    <style name="AniDex.Light" parent="Parent.Light">
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimary">@color/blue</item>

        <item name="colorOnSecondary">@color/blue</item>
        <item name="colorSecondary">@color/red</item>

        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorSurface">@android:color/white</item>

        <item name="colorAccent">@color/blue</item>

        <item name="viewBackground">#f6f6f6</item>

        <item name="toolbarBackground">#fbfbfb</item>

        <item name="fabStyle">@style/AniDex.Light.Fab</item>

        <item name="tagBackground">@color/blurLight</item>
    </style>

    <style name="AniDex.Dark" parent="Parent.Dark">
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimary">@color/yellow</item>

        <item name="colorOnSecondary">@color/yellow</item>
        <item name="colorSecondary">@color/green</item>

        <item name="colorSurface">@color/colorSurfaceDark</item>
        <item name="colorOnSurface">@android:color/white</item>

        <item name="colorAccent">@color/yellow</item>

        <item name="viewBackground">#191919</item>

        <item name="toolbarBackground">#202020</item>

        <item name="fabStyle">@style/AniDex.Dark.Fab</item>

        <item name="tagBackground">@color/blurDark</item>
    </style>

    <style name="AniDex.Dark.Fab">
        <item name="colorAccent">@color/yellow</item>
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorOnSecondary">@color/colorSurfaceDark</item>
    </style>

    <style name="AniDex.Light.Fab">
        <item name="colorAccent">@color/blue</item>
        <item name="colorOnSecondary">#fcfcfc</item>
        <item name="colorSecondary">@color/blue</item>
    </style>

    <style name="AniDex.Button">
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="AniDex.Dialog.Light" parent="Parent.Dialog.Light">
        <item name="android:colorBackground">@color/colorOnSurfaceDark</item>
        <item name="colorAccent">@color/textHeadingLight</item>
        <item name="dialogStyle">@style/AniDex.Light</item>
    </style>

    <style name="AniDex.Dialog.Dark" parent="Parent.Dialog.Dark">
        <item name="android:colorBackground">@color/colorSurfaceDark</item>
        <item name="colorAccent">@color/textHeadingDark</item>
        <item name="dialogStyle">@style/AniDex.Dark</item>
    </style>

</resources>
